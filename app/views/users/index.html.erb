
<div class= "container tasks_page">
  <table class="table">
    <h1>Users
        &nbsp
        <%= link_to 'Create User', new_user_path, class: "btn btn-primary pull-right" %>
      </div>
    </h1>

    <hr>

<table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

    <br>
    <br>
    <br>
    <br>

  </table>
</div>
