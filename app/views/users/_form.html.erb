<%= form_for(@user, html: {class: "form-horizontal"}) do |t| %>

<h1><%= title %></h1>

  <% if @user.errors.any? %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4 alert alert-danger user" role="alert">
        <p><strong><%= pluralize(@user.errors.count, "error") %>
            prohibited this user from being saved:</strong></p>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= t.label :first_name %></label>
    <div class="col-sm-4">
      <%= t.text_field :first_name, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= t.label :last_name %></label>
    <div class="col-sm-4">
      <%= t.text_field :last_name, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= t.label :email %></label>
    <div class="col-sm-4">
      <%= t.email_field :email, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= t.label :password %></label>
    <div class="col-sm-4">
      <%= t.password_field :password, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= t.label :password_confirmation %></label>
    <div class="col-sm-4">
      <%= t.password_field :password_confirmation, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
        <%= t.submit class: "btn btn-primary"%>
    </div>
  </div>

  <div class="form-group">
    <% if @user.id %>
      <div class="col-sm-offset-2 col-sm-4 well">
            <%= link_to 'Delete User', user_path, method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-danger col-sm-offset-4 col-sm-4" %>
      </div>
    <% end %>
  </div>

<% end %>
