<%= form_for(@user) do |t| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>
          prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<form class="form-horizontal">

    <div class="control-group">
        <%= t.label :first_name, class: "col-sm-2" %>
      <div class="col-sm-4">
        <%= t.text_field :first_name, class: "col-sm-3 form-control" %>
      </div>
    </div>

  <br>
  <br>

  <div class="control-group">
      <%= t.label :last_name, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= t.text_field :last_name, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <br>
  <br>

  <div class="control-group">
      <%= t.label :email, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= t.email_field :email, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <br>
  <br>

  <div class="control-group">
      <%= t.label :password, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= t.password_field :password, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <br>
  <br>

  <div class="control-group">
      <%= t.label :password_confirmation, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= t.password_field :password_confirmation, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <br>
  <br>

  <div class="control-group">
    <div class="col-sm-offset-2 col-sm-11">
        <%= t.submit class: "btn btn-primary btn-info"%>
    </div>
  </div>

  <br>
  <br>

  <div class="control-group">
    <% if @user.id %>
      <div class="col-sm-offset-1 col-sm-4 well">
            <%= link_to 'Delete User', user_path, method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-danger col-sm-offset-4 col-sm-4" %>
      </div>
    <% end %>
  </div>

</form>

<% end %>
