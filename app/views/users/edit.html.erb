<%= render 'form', title: "Edit User" %>

<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

  <h1><%= title %></h1>

  <div class="users-errors">
    <%= render "shared/errors", error_for: @user %>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= f.label :first_name %></label>
    <div class="col-sm-4">
      <%= f.text_field :first_name, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= f.label :last_name %></label>
    <div class="col-sm-4">
      <%= f.text_field :last_name, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= f.label :email %></label>
    <div class="col-sm-4">
      <%= f.email_field :email, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= f.label :password %></label>
    <div class="col-sm-4">
      <%= f.password_field :password, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"><%= f.label :password_confirmation %></label>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, class: "col-sm-3 form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
        <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>

  <div class="form-group">
    <% if @user.id %>
      <div class="col-sm-offset-2 col-sm-4 well">
            <%= link_to 'Delete User', user_path, method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-danger col-sm-offset-4 col-sm-4" %>
      </div>
    <% end %>
  </div>

<% end %>
