
<div class= "container tasks_page">
  <table class="table">
        <h1>Projects
        &nbsp
        <%= link_to 'Create Project', new_project_path,
        class: "btn btn-primary pull-right"  %></h1>

  <hr>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Members</th>
        <th>Tasks</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
      <tr>
        <td><%= link_to (project.name), project_path(project) %></td>
        <td><%= link_to project.memberships.count, project_memberships_path(project) %></td>
        <td><%= link_to project.tasks.count, project_tasks_path(project) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <br>
  <br>
  <br>

</div>
