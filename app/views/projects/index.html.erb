
  <div class = "page-header">
        <h1>Projects
        &nbsp
        <%= link_to 'Create Project', new_project_path,
        class: "btn btn-primary pull-right"  %></h1></div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Memberships</th>
        <th>Tasks</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.projects.each do |project| %>
      <tr>
        <td><%= link_to (project.name), project_path(project) %></td>
        <td><%= link_to project.memberships.count, project_memberships_path(project) %></td>
        <td><%= link_to project.tasks.count, project_tasks_path(project) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <br>
  <br>


  <% if current_user.tracker_token.present? %>
    <div class = "page-header">
          <h1>Pivotal Tracker Projects</h1></div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
          <% @tracker_projects.each do |project| %>
          <tr>
            <td><%= link_to project[:name], tracker_projects_path(tracker_id: project[:id]) %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  <% end %>

  <br>
  <br>
  <br>
  <br>
