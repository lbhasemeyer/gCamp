<div class="well col-md-4 col-md-offset-4">
  <%= form_tag signin_path do |f| %>

  <h1>Sign into gCamp</h1>

  <br>

  <div class="text-danger">
    <% if @sign_in_error %>
      <p>
        <%= @sign_in_error %>
      </p>
    <% end %>
  </div>

  <div>
    <%= label_tag :email %>
  </div>
  <div>
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
  </div>
  <div>
    <%= password_field_tag :password %>
  </div>


  <div>
    <%= submit_tag "Sign in", class: "auth-button btn btn-primary"  %>
  </div>

</div>

<% end %>
