<div class="well col-md-4 col-md-offset-4">

  <h1>Sign into gCamp</h1>

  <br>

    <%= form_tag signin_path do |f| %>

<div class="text-danger">
    <% if @sign_in_error %>
      <p>
        <%= @sign_in_error %>
      </p>
    <% end %>
</div>

  <div>
    <%= label_tag :email %>
  </div>
  <div>
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
  </div>
  <div>
    <%= password_field_tag :password %>
  </div>

  <br>

  <div>
    <%= submit_tag "Sign in", class: "btn btn-primary"  %>
  </div>

</div>


<br>
<br>
<br>
<br>


<% end %>
