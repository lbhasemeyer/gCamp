
<div class="page-header">
    <div class= "pull-right">
    <%= link_to 'Edit', edit_project_task_path(@project, @task), class: "btn btn-info" %>
    </div>
  <h1><%= @task.description %></h1>
</div>


<ol class="breadcrumb task_index">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li><%= link_to "Tasks", project_tasks_path(@project) %></li>
  <li class="active">Show</li>
</ol>

  <p>
  <strong>Due:</strong>
  <%= @task.due_date.strftime('%m/%d/%Y') %>
  </p>

  <p>
  <strong>Complete:</strong>
  <%= @task.complete %>
  </p>

  <h1>Comments</h1>

  <table class="table">
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td class="col-md-3"><%= comment.created_at %></td>
          <td class="col-md-9"><%= comment.comment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if session[:user_id] %>
    <div class="form-group col-sm-offset-3">
      <%= form_for @comment do |f| %>
      <%= hidden_field_tag :project_id, @project.id %>
      <%= hidden_field_tag :task_id, @task.id %>
        <div class="form-group">
            <%= f.text_field :comment, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.submit "Add Comment", class: "btn btn-primary"  %>
        </div>
      <% end %>
    </div>
  <% end %>
