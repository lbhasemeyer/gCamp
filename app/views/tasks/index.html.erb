<div class= "container tasks_page">
  <h1>Tasks</h1>
  <button type="button" class="btn btn-primary pull-right"><%= link_to 'Create Task', new_task_path %></button>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.description %></td>
          <td><button type="button" class="btn btn-primary"><%= link_to 'Show', task %></button></td>
          <td><button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_task_path(task) %></button></td>
          <td><button type="button" class="btn btn-primary"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <br>
    <br>
    <br>
</div>
