<strong><p id="notice" class="text-center"><%= notice %></p></strong>


<div class= "container tasks_page">
  <table class="table">
    <h1>Tasks
      <div class="pull-right">
        <% if params[:filter_by] == "all" %>
          All
          |
          <%= link_to "Incomplete", tasks_path(filter_by: "incomplete") %>
        <% else %>
          <%= link_to "All", tasks_path(filter_by: "all") %>
          |
          Incomplete
        <% end %>
        &nbsp
        <%= link_to 'Create Task', new_task_path, class: "btn btn-primary pull-right" %>
      </div>
    </h1>

    <hr>

<table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Complete</th>
        <th>Due Date</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.description %></td>
          <td><% if task.complete %>
                True
              <% else %>
                False
              <% end %>
          </td>
          <td><%= task.due_date.strftime('%m/%d/%Y') %></td>
          <td>
            <div class= "btn-toolbar pull-right">
              <%= link_to 'Show', task, class: "btn btn-success" %>
              <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

    <br>
    <br>
    <br>
    <br>

  </table>
</div>
