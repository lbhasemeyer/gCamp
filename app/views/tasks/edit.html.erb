<%= render 'form' %>

<%= form_for(@task) do |f| %>
  <div class="form-group col-sm-offset-1 col-sm-11">
    <div class="left">
        <br>
        <%= f.check_box :complete %>
        <%= f.label :complete %>
    </div>
    <br>
    <div class="left">
        <%= f.submit "Update Task", class: "btn btn-primary"%>
    </div>
  </div>
<% end %>

